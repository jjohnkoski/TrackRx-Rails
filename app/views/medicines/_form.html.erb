<%= form_for(@medicine) do |f| %>
<%= render 'shared/errors', object: @medicine %>
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name, autofocus: true %>
    </p>
    <p>
        <%= f.label :rx_number %><br>
        <%= f.number_field :rx_number %><br>
        <%= f.label :rx_number2 %><br>
        <%= f.number_field :rx_number2 %>
    </p>
    <p>
        <%= f.label :dose %><br>
        <%= f.text_area :dose, cols: 25, rows: 7 %>
    </p>
    <p>
        <%= f.collection_check_boxes(:type_ids, Type.all, :id, :name) %>
    </p>
    <p>
        <%= f.submit "Update Medicine" %> <%= link_to("Cancel", medicines_path) %>
    </p>
<% end %>
